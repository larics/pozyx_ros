<launch>

    <node name="remote_scheduler" pkg="pozyx_ros" type="remote_scheduler.py" output="screen">
        <!-- Frequency of positioning on each remote device individually. -->
        <param name="desired_rate" value="20" />
    </node>

    <!-- Anchor positions file -->
    <rosparam command="load" file="$(find pozyx_ros)/config/anchors.yaml" ns="pozyx"/>

    <!-- Tags in use -->
    <rosparam command="load" file="$(find pozyx_ros)/config/tags.yaml" ns="pozyx"/>

</launch>
